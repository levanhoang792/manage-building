  },
  "keywords": [
    "nodejs",
    "express",
    "server"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "module-alias": "^2.2.3"
  },
  "devDependencies": {
    "nodemon": "^3.0.1"
  },
  "_moduleAliases": {
    "@": ".",
    "@src": "src",
