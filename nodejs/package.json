{
  "name": "nodejs-server",
  "version": "1.0.0",
  "description": "Independent Node.js server",
  "main": "src/index.js",
  "scripts": {
    "start": "node -r module-alias/register src/index.js",
    "dev": "nodemon -r module-alias/register src/index.js",
